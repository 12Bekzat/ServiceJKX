<Window x:Class="JKX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunalPayment"
        mc:Ignorable="d"
        Title="Окно оплаты" Height="450" Width="700" FontFamily="Comic Sans MS" FontSize="20" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="waterRB" Content="Вода(200)" Width="100" Height="50" VerticalAlignment="Top" Margin="0 150 0 0" Click="Water"/>
        <Button x:Name="lightRB" Content="Свет(200)" Width="100" Height="50" VerticalAlignment="Top" Margin="0 210 0 0" Click="Light"/>
        <Button x:Name="trashRB" Content="Мусор(200)" Width="100" Height="50" VerticalAlignment="Top" Margin="0 270 0 0" Click="Trash"/>
    </Grid>
</Window>
